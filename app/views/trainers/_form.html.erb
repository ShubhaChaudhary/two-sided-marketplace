<%= simple_form_for @trainer, :html => {:multipart => true} do |f| %>

  <div class="form-inputs">
    <%= f.input :first_name, class: "form-control" %>
    <%= f.input :last_name, class: "form-control" %>
    <%= f.input :phone, class: "form-control" %>
    <%= f.input :bio, as: :text, class: "form-control", :input_html => {rows: "5"} %>
    <%= f.input :experience, class: "form-control" %>
    <%= f.check_box :terms_of_service%><p>accept terms & conditions</p>
    
    <%= f.input :avatar, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-normal" %>
  </div>
<% end %>
<br />
